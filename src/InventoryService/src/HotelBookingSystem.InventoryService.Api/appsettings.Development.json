{
    "Serilog":  {
                    "MinimumLevel":  {
                                         "Default":  "Debug",
                                         "Override":  {
                                                          "Microsoft":  "Information",
                                                          "Microsoft.Hosting.Lifetime":  "Information",
                                                          "Microsoft.EntityFrameworkCore":  "Information",
                                                          "System":  "Warning"
                                                      }
                                     },
                    "WriteTo":  [
                                    {
                                        "Name":  "File",
                                        "Args":  {
                                                     "path":  "logs/inventory-dev-.txt",
                                                     "rollingInterval":  "Day",
                                                     "retainedFileCountLimit":  30,
                                                     "outputTemplate":  "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} \u003cs:{SourceContext}\u003e{NewLine}{Exception}"
                                                 }
                                    }
                                ]
                }
}
